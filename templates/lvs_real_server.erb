<%-
  def format_options(options, indent_level=2)
    buffer = ''
    indent = '  ' * indent_level

    options.each do |key, value|
      if value.is_a?(Hash)
        buffer << "\n#{indent}#{key} {"
        buffer << format_options(value, indent_level+1)
        buffer << "\n#{indent}}"
      elsif value === true
        buffer << "\n#{indent}#{key}"
      else
        buffer << "\n#{indent}#{key} #{value}"
      end
    end

    buffer
  end
-%>
  real_server <%= @ip_address %> <%= @port %> {<%= format_options(@options) %>
  }
